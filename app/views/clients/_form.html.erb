<div class="d-flex justify-content-center text-center">
<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> No puedes borrar este cliente:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nombre", style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div>
    <%= form.label :age, "Edad", style: "display: block" %>
    <%= form.number_field :age, class:"form-control" %>
  </div>

<div>
  <%= form.submit "Crear Cliente", class:"form-control" %>
</div>
<% end %>
</div>
