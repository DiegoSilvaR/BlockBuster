<div class="container" style="margin-top: 6%;">

  <div id="clients" class="form-control bg-warning bg-gradient bg-opacity-75 shadow-lg p-4" style="font-family: 'Bungee Spice', cursive;">
    <div class="table-responsive scrollbar scrollbar-young-passion" style="max-height: 400px;">
      <table class="table table-dark table-striped rounded table-bordered">
        <thead class="table-dark sticky-top">
          <tr>
            <th scope="col" style="font-family: 'Bungee Spice', cursive;">ID</th>
            <th scope="col" style="font-family: 'Bungee Spice', cursive;">Nombre</th>
            <th scope="col" style="font-family: 'Bungee Spice', cursive;">Edad</th>
            <th scope="col" style="font-family: 'Bungee Spice', cursive;">Pelicula</th>
            <th scope="col" colspan="3" style="font-family: 'Bungee Spice', cursive;">Acciones</th> <!-- Cambio de tÃ­tulo para las acciones -->
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <%= render client %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
