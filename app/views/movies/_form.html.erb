<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "error") %> no puedes guardar esta pelicula:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nombre", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :client_id, "Cliente", style: "display: block" %>
    <%= form.select :client_id, options_for_select(@clients) %>
  </div>

  <!-- Nuevo campo para la URL de la imagen -->
  <div>
    <%= form.label :cover_image_url, "URL de la Caratula", style: "display: block" %>
    <%= form.text_field :cover_image_url %>
  </div>

  <div>
    <%= form.submit "Crear Pelicula"%>
  </div>
<% end %>
